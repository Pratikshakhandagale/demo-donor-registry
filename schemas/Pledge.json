{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Pledge": {
      "$ref": "#/definitions/Pledge"
    }
  },
  "required": [
    "Pledge"
  ],
  "title":"Pledge",
  "definitions": {
    "Pledge": {
      "$id": "#/properties/Pledge",
      "type": "object",
      "title": "The Pledge Schema",
      "required": [

      ],
      "properties": {
        "personalDetails": {
          "$ref": "Common.json/#/definitions/PersonalDetails"
        },
        "identificationDetails": {
          "$ref": "Common.json/#/definitions/IdentificationDetails"
        },
        "addressDetails": {
          "$ref": "Common.json/#/definitions/AddressDetails"
        },
        "pledgeDetails": {
          "$ref": "Common.json/#/definitions/PledgeDetails"
        },
        "emergencyDetails": {
          "$ref": "Common.json/#/definitions/EmergencyDetails"
        },
        "witnessDetails": {
          "$ref": "Common.json/#/definitions/WitnessDetails"
        }
      }
    }
  },
  "_osConfig": {
    "privateFields": [],
    "indexFields": [],
    "uniqueIndexFields": [],
    "systemFields": [
      "osCreatedAt",
      "osUpdatedAt",
      "osCreatedBy",
      "osUpdatedBy"
    ],
    "attestationPolicies": [
      {
        "name": "pledgeAffiliation",
        "conditions": "(ATTESTOR#$.[*]#.contains('nha-admin'))",
        "type": "AUTOMATED",
        "attestorPlugin": "did:internal:ClaimPluginActor?entity=nha-admin",
        "attestationProperties": {
          "emergencyDetails": "$.emergencyDetails",
          "pledgeDetails": "$.pledgeDetails",
          "bloodGroup": "$.personalDetails.bloodGroup",
          "identificationDetails": "$.identificationDetails",
          "personalDetails": "$.personalDetails"
        },
        "credentialTemplate": {
          "@context": [
            "https://www.w3.org/2018/credentials/v1",
            "https://gist.githubusercontent.com/varadeth/1a860d3545bbecbfe26791e545a0d5e3/raw/93557f33dea01e2837a8f9c7aa4fab686838e676/pledgeAttestation.json"
          ],
          "type": [
            "VerifiableCredential",
            "PledgeCertificate"
          ],
          "issuer": "https://nha.gov.in",
          "issuanceDate": "{{issuanceDate}}",
          "credentialSubject": {
            "type": "Donor",
            "name": "{{personalDetails.name}}",
            "dob": "{{personalDetails.dob}}",
            "gender": "{{personalDetails.gender}}",
            "identificationProof": "{{identificationDetails.proof}}",
            "identificationNumber": "{{identificationDetails.number}}",
            "mobileNumber": "{{personalDetails.mobileNumber}}",
            "emailId": "{{personalDetails.emailId}}",
            "emergencyMobileNumber": "{{emergencyDetails.email}}"
          },
          "evidence": {
            "type": "Pledge",
            "organs": "{{pledgeDetails.organs}}",
            "tissues": "{{pledgeDetails.tissues}}",
            "bloodGroup": "{{personalDetails.bloodGroup}}",
            "witness": "{{witnessDetails.0.name}}"
          }
        }
      }
    ],
    "inviteRoles":["anonymous"],
    "ownershipAttributes": [
      {
        "email": "/personalDetails/emailId",
        "mobile": "/personalDetails/mobileNumber",
        "userId": "/personalDetails/mobileNumber"
      }
    ]
  }
}
